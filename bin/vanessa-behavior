#!/usr/bin/env ruby

p `oscript`.start_with?("1Script")
p `oscript`
p '-------------------------------'

Encoding.default_internal = Encoding::UTF_8
Encoding.default_external = Encoding::UTF_8

p 'BDD, ATDD инструментарий для платформы 1С:Предприятие '

script = File.join(Gem.bin_path('vanessa-behavior', 'vanessa-behavior'), '../../vanessa-behavior.os')

IO.popen("oscript #{script} #{ARGV.join(" ")}", "r+:UTF-8") do |pipe|
  p pipe.gets
end

